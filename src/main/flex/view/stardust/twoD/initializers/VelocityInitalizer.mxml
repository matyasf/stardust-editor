<?xml version="1.0"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
                xmlns:s="library://ns.adobe.com/flex/spark"
                xmlns:zones="view.stardust.twoD.zones.*"
                toolTip="Sets a particle's initial velocity.">

    <fx:Script><![CDATA[

        import idv.cjcat.stardust.twoD.initializers.Velocity;

        import spark.components.List;

        override public function set data(d:Object):void
        {
            super.data = d;
            if (d == null) return;
            var dat:Velocity = data as Velocity;
            zc.setData(dat, "zone");
        }
        ]]></fx:Script>
    <s:layout>
        <s:HorizontalLayout verticalAlign="middle"/>
    </s:layout>

    <s:Label text="Velocity" />

    <zones:ZoneContainer id="zc" width="100%"/>

    <s:Button label="remove" height="100%"
              click="List(owner).dataProvider.removeItemAt( List(owner).dataProvider.getItemIndex(data) )"/>
</s:ItemRenderer>
