<?xml version="1.0"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
        toolTip="Causes particles' rotation to align to their velocities.">

    <fx:Script><![CDATA[
        import helpers.Globals;

        import idv.cjcat.stardust.twoD.actions.Oriented;

        import spark.components.List;

        private function updateData(e:Event):void
        {
            var dat:Oriented = data as Oriented;
            dat.factor = Number(factorTextInput.text);
            dat.offset = Number(offsetTextInput.text);
        }
        ]]></fx:Script>
    <s:layout>
        <s:HorizontalLayout verticalAlign="middle"/>
    </s:layout>

    <s:Label text="Orient to velocity" />

    <s:Label text="factor" />
    <s:TextInput id="factorTextInput" text="1" restrict="0-9.\-" width="50" change="updateData(event)"
            toolTip="How fast the particles align to their velocities, 1 by default. 1 means immediate alignment. 0 means no alignment at all."/>

    <s:Label text="offset" />
    <s:TextInput id="offsetTextInput" text="0" restrict="0-9.\-" width="50" change="updateData(event)"
                 toolTip="The rotation angle offset in degrees."/>

    <s:Spacer width="100%"/>
    <s:Button label="remove"
              click="List(owner).dataProvider.removeItemAt( List(owner).dataProvider.getItemIndex(data) )" height="100%"/>
</s:ItemRenderer>
