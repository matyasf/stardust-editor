<?xml version="1.0"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
                xmlns:s="library://ns.adobe.com/flex/spark" >

    <fx:Script><![CDATA[
        import idv.cjcat.stardust.twoD.actions.Move;

        import spark.components.List;

        private function updateData(e:Event):void
        {
            var dat:Move = data as Move;
            dat.multiplier = Number(mulTextInput.text);
        }

        override public function set data(d:Object):void
        {
            super.data = d;
            if (d == null) return;
            mulTextInput.text = Move(data).multiplier.toString();
        }

        ]]></fx:Script>
    <s:layout>
        <s:HorizontalLayout verticalAlign="middle"/>
    </s:layout>
    <s:Label text="Simulation speed multiplier:" />
    <s:TextInput id="mulTextInput" restrict="0-9." width="50" change="updateData(event)" height="100%"/>

</s:ItemRenderer>
