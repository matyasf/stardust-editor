<?xml version="1.0"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
                xmlns:s="library://ns.adobe.com/flex/spark"
                xmlns:fields="view.stardust.twoD.fields.*"
                toolTip="Alters a particle's velocity based on a vector field.">

    <fx:Script><![CDATA[
        import idv.cjcat.stardust.sd;
        import idv.cjcat.stardust.twoD.actions.VelocityField;

        import spark.components.List;

        use namespace sd;

        private function updateData(e:Event):void
        {
            var dat:VelocityField = VelocityField(data);
            var fieldsArr:Array = fieldContainer.getData();
            if ( fieldsArr.length > 0 )
            {
                dat.field = fieldsArr[0];
            }
            else
            {
                dat.field = null;
            }
        }

        override public function set data(d:Object):void
        {
            super.data = d;
            if (d == null) return;
            var dat:VelocityField = d as VelocityField;
            if (dat.field != null)
            {
                fieldContainer.setData( [dat.field] );
            }
        }
        ]]></fx:Script>
    <s:layout>
        <s:HorizontalLayout verticalAlign="middle"/>
    </s:layout>

    <s:Label text="Velocity field" />

    <fields:FieldContainer id="fieldContainer" width="100%" hasOnlyOneField="true" change="updateData(event)"/>

    <s:Button label="remove" height="100%"
              click="List(owner).dataProvider.removeItemAt( List(owner).dataProvider.getItemIndex(data) )"/>
</s:ItemRenderer>
