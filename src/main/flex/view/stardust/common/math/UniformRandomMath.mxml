<?xml version="1.0"?>
<s:HGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
          xmlns:s="library://ns.adobe.com/flex/spark"
          verticalAlign="middle" >

    <fx:Script><![CDATA[
        import idv.cjcat.stardust.common.math.UniformRandom;

        private var data:UniformRandom;

        public function setData( d : UniformRandom):void
        {
            data = d;
            cenTextInput.text = d.center.toString();
            radiusTextInput.text = d.radius.toString();
        }

        public function updateData():void
        {
            data.center = Number(cenTextInput.text);
            data.radius = Number(radiusTextInput.text);
        }

        ]]></fx:Script>

    <s:Label text="expected value" />
    <s:TextInput id="cenTextInput" restrict="0-9.\-" width="50" change="updateData()" />

    <s:Label text="variation" />
    <s:TextInput id="radiusTextInput" restrict="0-9.\-" width="50"  change="updateData()"/>

</s:HGroup>
