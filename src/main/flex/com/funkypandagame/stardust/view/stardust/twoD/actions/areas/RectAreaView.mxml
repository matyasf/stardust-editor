<?xml version="1.0"?>
<twod:PropRendererBase xmlns:fx="http://ns.adobe.com/mxml/2009"
                       xmlns:s="library://ns.adobe.com/flex/spark"
                       xmlns:components="com.funkypandagame.stardust.view.components.*"
                       xmlns:twod="com.funkypandagame.stardust.view.stardust.twoD.*"
                       nameText="Rect.  x">

    <fx:Script><![CDATA[
        import idv.cjcat.stardustextended.actions.areas.RectArea;

        override public function set data(d:Object):void {
            super.data = d;
            if (d) {
                var area:RectArea = RectArea(d);
                xTextInput.text = area.x.toString();
                yTextInput.text = area.y.toString();
                wiInput.text = area.width.toString();
                heInput.text = area.height.toString();
                rotationInput.text = area.rotation.toString();
            }
        }

        private function updateData():void {
            var area:RectArea = RectArea(data);
            area.x = Number(xTextInput.text);
            area.y = Number(yTextInput.text);
            area.width = Number(wiInput.text);
            area.height = Number(heInput.text);
            area.rotation = Number(rotationInput.text);
        }
        ]]></fx:Script>

    <twod:layout>
        <s:HorizontalLayout verticalAlign="middle" gap="3"/>
    </twod:layout>

    <components:CustomNumericStepper id="xTextInput" width="40" change="updateData()"/>

    <s:Label text=" y"/>
    <components:CustomNumericStepper id="yTextInput" width="40" change="updateData()"/>

    <s:Label text=" width"/>
    <components:CustomNumericStepper id="wiInput" width="40" change="updateData()"/>

    <s:Label text=" height"/>
    <components:CustomNumericStepper id="heInput" width="40" change="updateData()"/>

    <s:Label text=" rotation"/>
    <components:CustomNumericStepper id="rotationInput" width="31" change="updateData()"/>

</twod:PropRendererBase>
