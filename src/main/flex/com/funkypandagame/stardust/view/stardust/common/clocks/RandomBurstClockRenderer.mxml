<?xml version="1.0"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
          xmlns:s="library://ns.adobe.com/flex/spark"
          xmlns:math="com.funkypandagame.stardust.view.stardust.common.math.*"
          verticalAlign="middle"
          implements="com.funkypandagame.stardust.view.stardust.common.clocks.IClockRenderer">

    <fx:Script><![CDATA[

        import idv.cjcat.stardustextended.common.clocks.Clock;

        import idv.cjcat.stardustextended.common.clocks.RandomBurstClock;
        import idv.cjcat.stardustextended.common.math.UniformRandom;

        private var clock : RandomBurstClock;

        public function setData(d : Clock):void
        {
            clock = RandomBurstClock(d);
            initDelayMath.setData(clock.initialDelay as UniformRandom);
            burstIntervalMath.setData(clock.burstInterval as UniformRandom);
            burstLengthMath.setData(clock.burstLength as UniformRandom);
            ticksPerCallMath.setData(clock.ticksPerCall as UniformRandom);
        }

        ]]></fx:Script>

    <s:HGroup verticalAlign="middle">
        <s:Label text="initial delay"/>
        <math:UniformRandomMath id="initDelayMath"/>

        <s:Label text="burst length"/>
        <math:UniformRandomMath id="burstLengthMath"/>
    </s:HGroup>

    <s:HGroup verticalAlign="middle">
        <s:Label text="burst interval"/>
        <math:UniformRandomMath id="burstIntervalMath"/>

        <s:Label text="new part./frame"/>
        <math:UniformRandomMath id="ticksPerCallMath"/>
    </s:HGroup>
</s:VGroup>
