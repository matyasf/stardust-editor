<?xml version="1.0"?>
<s:HGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
          xmlns:s="library://ns.adobe.com/flex/spark"
          xmlns:components="com.funkypandagame.stardust.view.components.*"
          verticalAlign="middle"
          implements="com.funkypandagame.stardust.view.stardust.twoD.zones.IZoneRenderer">

    <fx:Script><![CDATA[
        import idv.cjcat.stardustextended.twoD.zones.SinglePoint;
        import idv.cjcat.stardustextended.twoD.zones.Zone;

        private var zone:SinglePoint;

        public function setData(d:Zone):void {
            zone = SinglePoint(d);
            xTextInput.text = zone.x.toString();
            yTextInput.text = zone.y.toString();
        }

        private function updateData():void {
            zone.x = Number(xTextInput.text);
            zone.y = Number(yTextInput.text);
        }
        ]]></fx:Script>

    <s:Label text="x"/>
    <components:CustomNumericStepper id="xTextInput" text="1" change="updateData()"/>

    <s:Label text="y"/>
    <components:CustomNumericStepper id="yTextInput" text="1" change="updateData()"/>

</s:HGroup>
