<?xml version="1.0"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
          xmlns:s="library://ns.adobe.com/flex/spark"
          xmlns:components="com.funkypandagame.stardust.view.components.*"
                opaqueBackground="0x565656" autoDrawBackground="false"
                width="100%" >

    <fx:Script><![CDATA[
        import idv.cjcat.stardustextended.twoD.zones.CircleZone;

        import spark.components.DataGroup;

        override public function set data(d:Object):void
        {
            super.data = d;
            if (d)
            {
                var zone : idv.cjcat.stardustextended.twoD.zones.CircleZone = d as idv.cjcat.stardustextended.twoD.zones.CircleZone;
                xTextInput.text = zone.x.toString();
                yTextInput.text = zone.y.toString();
                radiusInput.text = zone.radius.toString();
            }
        }

        private function updateData():void
        {
            var zone : idv.cjcat.stardustextended.twoD.zones.CircleZone = data as idv.cjcat.stardustextended.twoD.zones.CircleZone;
            zone.x = Number(xTextInput.text);
            zone.y = Number(yTextInput.text);
            zone.radius = Number(radiusInput.text);
        }
        ]]></fx:Script>

    <s:layout>
        <s:HorizontalLayout verticalAlign="middle" />
    </s:layout>

    <s:Label text="Circle   x"/>
    <components:CustomNumericStepper id="xTextInput" width="50" change="updateData()"/>

    <s:Label text="y"/>
    <components:CustomNumericStepper id="yTextInput" width="50" change="updateData()"/>

    <s:Label text="radius"/>
    <components:CustomNumericStepper id="radiusInput" width="50" change="updateData()"/>

    <s:Spacer width="100%"/>
    <s:Button label="remove"
              click="DataGroup(owner).dataProvider.removeItemAt( DataGroup(owner).dataProvider.getItemIndex(data) )"/>

</s:ItemRenderer>