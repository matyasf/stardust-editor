<?xml version="1.0"?>
<!-- containers\spark\myComponents\MyLoginForm.mxml -->
<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009"
               xmlns:s="library://ns.adobe.com/flex/spark"
               backgroundColor="#2F3B3F">
    <s:layout>
        <s:VerticalLayout/>
    </s:layout>

    <fx:Script>
        <![CDATA[
        [Bindable]
        public var label : String;
        ]]>
    </fx:Script>

    <s:Form>
        <s:FormItem label="Emitter name:">
            <s:TextInput id="emitterName" text="{label}" width="100%"/>
        </s:FormItem>
    </s:Form>
    <s:HGroup>
        <s:Button id="okButton" label="OK"/>
        <s:Button id="cancelButton" label="Cancel"/>
    </s:HGroup>
</s:TitleWindow>